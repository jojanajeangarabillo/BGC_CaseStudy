<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1E9C4"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Sign Up Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/form_background"
            android:layout_marginTop="24dp"
            android:elevation="4dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Sign Up"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C4B1D"
                android:fontFamily="@font/luckybones"
                android:layout_marginBottom="24dp" />

            <!-- Full Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full name"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <!-- Age -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="number"
                android:layout_marginBottom="12dp"/>

            <!-- Year Level -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year Level"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <!-- Gender -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <!-- Favorite Music -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your favorite music?"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:fontFamily="@font/luckybones"
                android:hint="Paste the URL here"
                android:layout_marginBottom="12dp"/>

            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:layout_marginBottom="12dp"/>

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                style="@style/LabelStyle"
                android:fontFamily="@font/luckybones"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edittext_background"
                android:padding="10dp"
                android:inputType="textPassword"
                android:layout_marginBottom="20dp"/>

            <!-- Sign Up Button -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"
                android:textColor="#2C4B1D"
                android:backgroundTint="#D6A05D"
                android:background="@drawable/signup_button"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
