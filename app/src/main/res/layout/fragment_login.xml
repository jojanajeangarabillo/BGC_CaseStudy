<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2efc3">

    <!-- Back Arrow and Log In Text -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"

            android:layout_height="30dp"
            android:src="@android:drawable/ic_media_previous" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/luckybones"
            android:text="Log In"
            android:textColor="#2F4F2F"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Login Card -->
    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="336dp"
        android:layout_height="357dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/form_background"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/luckybones"
            android:text="Username"
            android:textColor="#2F4F2F"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#d2efc3"
            android:hint=""
            android:padding="10dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/luckybones"
            android:text="Password"
            android:textColor="#2F4F2F"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittext_background"
            android:backgroundTint="#d2efc3"
            android:hint=""
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/oneTimeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/luckybones"
            android:text="One time log in"
            android:textColor="#2F4F2F" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="#D6A05D"
            android:fontFamily="@font/luckybones"
            android:text="Log in"
            android:textColor="#2F4F2F" />
    </LinearLayout>

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_below="@id/loginCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="#2F4F2F"
        android:fontFamily="@font/luckybones" />
</RelativeLayout>
