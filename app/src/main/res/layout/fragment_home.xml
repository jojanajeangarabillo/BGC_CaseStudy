<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Hi, User Name!"
                android:textColor="#21421E"
                android:textSize="30sp"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"/>

            <TextView
                android:id="@+id/dateTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday, May 18 10:30 AM"
                android:textColor="#21421E"
                android:textSize="12sp"
                android:fontFamily="@font/luckybones"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Profile Icon"
            android:src="@drawable/profileicon" />
    </LinearLayout>

    <!-- 2x2 Button Grid -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Mood Check-in -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_card"
            android:padding="16dp"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/smiley"
                android:contentDescription="Mood Check-in Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="15sp"
                android:text="Mood\nCheck-in"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="You are stronger\nthan you think"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textSize="12sp"
                android:fontFamily="@font/luckybones"/>
        </LinearLayout>

        <!-- Journal -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="155dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="47dp"
                android:layout_height="52dp"
                android:contentDescription="Journal Icon"
                android:src="@drawable/journaling" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Journal"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"/>

            <TextView
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/luckybones"
                android:text="Write your\nThoughts"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="154dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Notifications Icon"
                android:src="@drawable/notify" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Notifications"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Donâ€™t forget your\ndaily check-in"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textSize="12sp"
                android:fontFamily="@font/luckybones"/>
        </LinearLayout>

        <!-- Hotlines -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="157dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_card"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Hotlines Icon"
                android:src="@drawable/hotlines" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hotlines"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textStyle="bold"
                android:fontFamily="@font/luckybones"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Call for\nprofessional\nassistance"
                android:textAlignment="center"
                android:textColor="#21421E"
                android:textSize="12sp"
                android:fontFamily="@font/luckybones"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>
