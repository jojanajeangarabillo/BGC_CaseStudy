<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plptambay"
    android:padding="16dp">

    <!-- App Logo and Title -->
    <LinearLayout
        android:id="@+id/logoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/luckybones">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:contentDescription="App Logo"
            android:src="@drawable/tambaylogo" />

        <!-- App Name -->

        <!-- Tagline -->
        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/luckybones"
            android:text="PLP TAMBAY"
            android:textColor="@android:color/white"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Tuning And Mindful Breaks App for Youth&quot;"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:fontFamily="@font/luckybones"/>
    </LinearLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/registerButton"
        android:layout_width="156dp"
        android:layout_height="71dp"
        android:layout_below="@id/logoContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#D6A05D"
        android:fontFamily="@font/luckybones"
        android:paddingStart="24dp"
        android:paddingTop="10dp"
        android:paddingEnd="24dp"
        android:paddingBottom="10dp"
        android:text="Register"
        android:textColor="#2E320E"
        android:textSize="25sp"
        android:textStyle="bold" />

    <!-- Bottom Decorative Image (Optional) -->
</RelativeLayout>
