<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C6E8B4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/textMoodResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="“TEXT TO RESPOND TO USER MOOD”"
            android:textStyle="bold"
            android:textColor="#2D2D2D"
            android:textSize="40sp"
            android:fontFamily="@font/luckybones"
            android:layout_marginTop="50dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/imageMood"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/joy"/>

        <TextView
            android:id="@+id/textFeeling"
            android:layout_width="wrap_content"
            android:fontFamily="@font/luckybones"
            android:layout_height="wrap_content"
            android:text="Since you’re feeling _____, here’s a quote for ya!"
            android:textColor="#2D2D2D"
            android:textSize="30sp"
            android:layout_marginTop="16dp"
            android:textStyle="bold"

            android:gravity="center" />

        <TextView
            android:id="@+id/textQuotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="<This is a quote for you><This is a quote for you>..."
            android:textColor="#2D2D2D"
            android:textSize="20sp"

            android:layout_marginTop="24dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>
</ScrollView>
